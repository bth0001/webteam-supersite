<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= project.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/projects/<%= project._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control"type="text" name="project[name]" value="<%= project.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control"type="text" name="project[description]" value="<%= project.description %>">
                </div>
                <div class="form-group">
                    <select name="project[status]">
                        <option value="<%= project.status %>"><%= project.status %></option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/projects">Back to project</a>
        </div>
    
    </div>
</div>
<% include ../partials/footer %>