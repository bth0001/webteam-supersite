<% include ../partials/header %>
<style>
    h1 {text-transform: capitalize;}
    #trackerBtn {clear: both;}
    .list-group-item.active {background-color: #2637B0; border-color: #2637B0;}
</style>
<div id="overview" class="center">
        <h1><%= project.name %> Project</h1>
      </div>
<div class="container" style="margin: 30px auto;">
    <div class="row">
        <div class="col-md-4" style="margin: 10px 0;">
            <p class="lead">Project Details</p>
            <div class="list-group">
                <li class="list-group-item"><strong>Status:</strong> <%= project.status %></li>
                <li class="list-group-item"><strong>Created Date:</strong> <%= moment(project.created_at).format("MMM DD, YYYY hh:mm a") %></li>
                <li class="list-group-item"><strong>Last Modified:</strong> <%= moment(project.updatedAt).format("MMM DD, YYYY hh:mm a") %></li>
            </div>
        </div>
        <div class="col-md-8">
            <div class="thumbnail">
                <img src="/images/Projectweb.png" alt="Strom Centre" class="responsive-image" style="float: right;">
                <div class="caption-full">
                    <h4 class="pull-right"><%= moment(project.date).format("MMM DD, YYYY") %></h4>
                    <h4><a><%=project.name%></a></h4>
                    <p><%= project.description %></p>
                    <p><em>Submitted By: <strong><%= project.author.firstName %> - <%= project.author.email %></strong></em></p>
                    <div id="trackerBtn">
                        <% if(currentUser && project.author.id.equals(currentUser._id)){ %>
                            
                                <a class="btn edit" href="/projects/<%= project._id %>/edit">Edit</a>
                                <form id="delete-form" action="/projects/<%= project._id %>?_method=DELETE" method="POST">
                                    <button class="btn delete">Delete</button>
                                </form>
                                 
                        <% } %>
                        <a class="btn comment" href="/projects/<%= project._id %>/projectComments/new">Leave a Comment!</a>
                            </div>       
        </div>
            </div>
            <div class="well">                
                <hr>
            <% project.comments.forEach(function(comment){%>
                <div class="row">
                    <div class="col-md-12">
                        <strong>
                        <%= comment.author.firstName %> - </strong> <em><%= comment.author.email %></em>
                        <span class="pull-right"><strong><%= moment(comment.time).format("MMM DD, YYYY - hh:mm a") %></strong></span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <div id="trackerBtn">
                            <a class="btn edit" 
                                href="/projects/<%= project._id %>/projectComments/<%= comment._id %>/edit">Edit
                            </a>
                            <form id="delete-form" action="/projects/<%= project._id %>/projectComments/<%=comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn delete">Delete</button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>