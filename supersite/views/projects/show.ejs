<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail">
                <img class="img-responsive" src="http://webplus.televoxsites.com/projects/supersite/web.jpg">
                <div class="caption-full">
                    <h4 class="pull-right"><%= project.date %></h4>
                    <h4><a><%=project.name%></a></h4>
                    <p><%= project.description %></p>
                    <p><em>Submitted By: <strong><%= project.author.firstName %> - <%= project.author.email %></strong></em></p>
                    
                        <% if(currentUser && project.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" href="/projects/<%= project._id %>/edit">Edit</a>
                            <form id="delete-form" action="/projects/<%= project._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                            </form>
                        <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/projects/<%= project._id %>/projectComments/new">Leave us a Review!</a>
                </div>
                <hr>
            <% project.comments.forEach(function(comment){%>
                <div class="row">
                    <div class="col-md-12">
                        <strong>
                        <%= comment.author.firstName %>
                        </strong>
                        <span class="pull-right">10 Days Ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" 
                            href="/projects/<%= project._id %>/projectComments/<%= comment._id %>/edit">Edit
                        </a>
                        <form id="delete-form" action="/projects/<%= project._id %>/projectComments/<%=comment._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            <% }) %>
            </div>
        </div>
    </div>
</div>
<a href="/projects">Back to CampGrounds</a>
<% include ../partials/footer %>